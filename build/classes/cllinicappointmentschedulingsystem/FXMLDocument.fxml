<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="cllinicappointmentschedulingsystem.ClinicAppointmentController"
            prefWidth="700" prefHeight="500"
            style="-fx-background-color: linear-gradient(to bottom, #f8f9fa, #e9ecef);">

    <VBox spacing="20" layoutX="30" layoutY="20" prefWidth="640" prefHeight="460">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="ðŸ¥ CLINIC APPOINTMENT SCHEDULING SYSTEM"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1565c0;"/>

        <GridPane hgap="15" vgap="15" style="-fx-background-color: white; -fx-padding: 20px; -fx-background-radius: 10px;">

            <Label text="ðŸ‘¤ Patient Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <TextField fx:id="txtPatient" GridPane.rowIndex="0" GridPane.columnIndex="1"
                      promptText="Enter patient full name" prefWidth="250"
                      style="-fx-font-size: 14px; -fx-padding: 8px;"/>

            <Label text="ðŸ‘¨â€âš•ï¸ Doctor:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <ComboBox fx:id="cmbDoctor" GridPane.rowIndex="1" GridPane.columnIndex="1"
                     promptText="Select a doctor" prefWidth="250"
                     style="-fx-font-size: 14px;"/>

            <Label text="ðŸ“… Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <DatePicker fx:id="datePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"
                       prefWidth="250" style="-fx-font-size: 14px;"/>

            <Label text="ðŸ• Time:" GridPane.rowIndex="3" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <TextField fx:id="txtTime" promptText="HH:MM (e.g., 14:30)" GridPane.rowIndex="3" GridPane.columnIndex="1"
                      prefWidth="250" style="-fx-font-size: 14px; -fx-padding: 8px;"/>

        </GridPane>

        <HBox spacing="20" alignment="CENTER">
            <Button text="ðŸ“‹ SCHEDULE APPOINTMENT" onAction="#handleScheduleAppointment"
                    style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 12px 24px;"/>
            <Button text="ðŸ—‘ï¸ CLEAR FORM" onAction="#handleClear"
                    style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 12px 24px;"/>
        </HBox>

        <TextArea fx:id="txtOutput"
                  prefHeight="200"
                  editable="false"
                  wrapText="true"
                  style="-fx-font-family: 'Courier New'; -fx-font-size: 12px; -fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 5px;"
                  promptText="Appointment details and history will appear here..."/>

    </VBox>
</AnchorPane>