<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.clinic.controllers.ClinicAppointmentController"
            prefWidth="600" prefHeight="420">

    <VBox spacing="12" layoutX="30" layoutY="20">

        <Label text="Clinic Appointment Scheduling System"
               style="-fx-font-size:20px; -fx-font-weight:bold;" />

        <GridPane hgap="10" vgap="10">

            <Label text="Patient Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtPatient" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Doctor:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cmbDoctor" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <DatePicker fx:id="datePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Time:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtTime" promptText="HH:MM" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        </GridPane>

        <HBox spacing="15">
            <Button text="Schedule Appointment" onAction="#handleScheduleAppointment"/>
            <Button text="Clear" onAction="#handleClear"/>
        </HBox>

        <TextArea fx:id="txtOutput"
                  prefHeight="140"
                  editable="false"
                  promptText="Scheduled appointments will appear here..."/>

    </VBox>
</AnchorPane>