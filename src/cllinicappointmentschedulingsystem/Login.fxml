<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="cllinicappointmentschedulingsystem.LoginController"
            prefWidth="450" prefHeight="350"
            style="-fx-background-color: linear-gradient(to bottom, #e3f2fd, #bbdefb);">

    <VBox alignment="CENTER" spacing="25" layoutX="75" layoutY="50" prefWidth="300" prefHeight="250">
        <padding>
            <Insets top="30" right="30" bottom="30" left="30"/>
        </padding>

        <Label text="ðŸ¥ CLINIC LOGIN SYSTEM"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1565c0;"/>

        <VBox spacing="20" alignment="CENTER">
            <VBox spacing="8">
                <Label text="Username:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                <TextField fx:id="txtUsername" promptText="Enter username (admin or staff)" 
                          prefWidth="250" prefHeight="35"
                          style="-fx-font-size: 14px; -fx-padding: 8px;"/>
            </VBox>

            <VBox spacing="8">
                <Label text="Password:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                <PasswordField fx:id="txtPassword" promptText="Enter password" 
                              prefWidth="250" prefHeight="35"
                              style="-fx-font-size: 14px; -fx-padding: 8px;"/>
            </VBox>

            <HBox spacing="15" alignment="CENTER">
                <Button text="ðŸ” LOGIN" onAction="#handleLogin" 
                        style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-padding: 10px 20px;"
                        prefWidth="120"/>
                <Button text="ðŸ—‘ï¸ CLEAR" onAction="#handleClear"
                        style="-fx-background-color: #757575; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px 20px;"
                        prefWidth="120"/>
            </HBox>

            <Label fx:id="lblMessage" style="-fx-text-fill: red; -fx-font-weight: bold;" wrapText="true" prefWidth="250"/>
            
            <VBox spacing="5" alignment="CENTER">
                <Label text="ðŸ“‹ Default Credentials:" style="-fx-font-weight: bold; -fx-font-size: 12px;"/>
                <Label text="Admin: admin / clinic123" style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
                <Label text="Staff: staff / staff123" style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
            </VBox>
        </VBox>
    </VBox>
</AnchorPane>